#:kivy 1.0.9

#
# Main Structure
#

<SideContainer>:
	side_content: lower_cont
	orientation: 'vertical'

	Button:
		size_hint: 1, .15
		text: app.side_student_string
		on_press: app.switch_to_student()
		markup: True
	Button:
		size_hint: 1, .15
		text: app.side_attendence_string
		on_press: app.switch_to_video()
		markup: True
	Button:
		size_hint: 1, .15
		text: app.side_train_string
		on_press: app.switch_to_train()
		markup: True
	BoxLayout:
		id: lower_cont



#
# Main Content
# 

<StudentMain>:
	pos_hint: {'right': 1}
	size_hint: .9, 1


#
# Side Content
#

<StudentSidebar>:
	padding: 10
	spacing: 10
	orientation: 'vertical'
	Button:
		text: "Add Class"
		on_release: app.show_create_class()
	Button:
		text: "Remove Class"
		on_release: app.remove_class_query()


<VideoSidebar>:
	padding: 10
	spacing: 10
	orientation: 'vertical'

	live_layout: live_layout
	recorded_layout: recorded_layout

	Button:
		text: root.toggle_string
		on_release: root.toggle_video_mode()

	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			id: recorded_layout
			spacing: 10
			orientation: 'vertical'
			Button:
				text: "Choose Video"
				on_release: app.show_file()
			Button:
				text: "Temp Button"

		BoxLayout:
			id: live_layout
			spacing: 10
			orientation: 'vertical'
			Button:
				text: root.toggle_source_string
				on_release: root.toggle_source()
			Button:
				text: "Pause Video"
				on_release: root.pause_live()

	Button:
		text: "Detect Faces"
		on_release: app.show_detect()


<TrainSidebar>:
	padding: 10
	spacing: 10
	orientation: 'vertical'
	Button:
		text: "Choose Video"
		on_release: app.show_file()
	Button:
		text: "Live Cam\n(Not implemented)"
	Button:
		text: "Train Network"


#
# Main Widgets
#

<StudentList>:
	pos_hint: {'right': 1}
	size_hint: .9, 1


<StudentElement>:
	Label:
		id: student_label
		text: root.student_label
		text_size: self.size
		halign: 'left'	
		valign: 'middle'


<VideoMain>:
	player: video_player

	VideoPlayer:
		id: video_player
		size: root.size
		source: "vids/boys_geo.mp4"


#
# Side Widgets
#

<ConfirmDialog>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		Label:
			text: root.message

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Ok"
				on_release: app.confirm_confirmation()


<LoadFileDialog>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"
		FileChooserListView:
			id: filechooser

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Load"
				on_release: app.load(filechooser.path, filechooser.selection)


<CreateClassDialog>:
	list_widget: list_widget
	text_student_name: text_student_name

	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"

		BoxLayout:
			orientation: "horizontal"

			BoxLayout:
				orientation: "vertical"

				Label:
					height: 40
					size_hint_y: None
					text: "Student List"

				CreateClassListWidget:
					id: list_widget

			BoxLayout:
				orientation: "vertical"

				TextInput:
					height: 40
					size_hint_y: None
					id: text_class_name
					text: "Class_TEMP"
				
				RelativeLayout:
					pos: self.parent.pos
					size: self.parent.size

					BoxLayout:
						orientation: "vertical"
						height: 160
						size_hint_y: None
						center_y: root.center_y

						GridLayout:
							cols: 2
							row_default_height: 50
							row_force_default: True
							
							Label: 
								text: "Name"
							TextInput:
								id: text_student_name
								text: ""
								
							Button:
								text: "Remove Student"
								on_release: list_widget.remove_student()
								
							Button:
								id: submit_button
								text: "Add Student"
								on_release: list_widget.add_student(text_student_name.text)

						Button:
							height: 60
							size_hint_y: None
							text: "Import Class from Text File\n(Not Implemented)"
		
		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Create Class"
				on_release: app.create_new_class(list_widget, text_class_name.text)


<CreateClassStudentWidget>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (.1, .1, .1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
    	text: root.name
		text_size: self.size
		halign: 'left'	
		valign: 'middle'
		x: 50


<LoadDetectDialog>:
	BoxLayout:
		size: root.size
		pos: root.pos
		orientation: "vertical"

		GridLayout:
			cols: 2

			Label:
				text: "Video Path"
			TextInput:
				id: video_path
				text: "vids/boys_geo.mp4"

			Label:
				text: "Database"
			TextInput:
				id: database_path
				text: "records.db"

			Label:
				text: "Room Location"
			TextInput:
				id: location
				text: "TJ202"

			Label:
				text: "Image Directory"
			TextInput:
				id: image_dir
				text: "imdata"

			Label:
				text: "Save Video To"
			TextInput:
				id: save_video_path
				text: "vids/video_output.mp4"

			Label:
				text: "Save Boxes To"
			TextInput:
				id: save_boxes_path
				text: "boxes/video_boxes.pkl"

			Label:
				text: "Track Faces"
			CheckBox:
				id: track_faces
				active: True

			Label:
				text: "Number of Frames to Analyze"
			TextInput:
				id: num_frames
				text: "16"

		BoxLayout:
			size_hint_y: None
			height: 30
			Button:
				text: "Cancel"
				on_release: root.cancel()

			Button:
				text: "Start"
				on_release: app.detect_faces(video_path.text, database_path.text, location.text, image_dir.text, save_video_path.text, save_boxes_path.text, track_faces.active, num_frames.text)